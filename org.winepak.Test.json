{
    "app-id" : "org.winepak.Test",
    "branch" : "staging",
    "runtime" : "org.winepak.Platform",
    "runtime-version" : "staging",
    "sdk" : "org.winepak.Sdk",
    "command" : "winepak-test",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--allow=multiarch",
        "--extension=org.winepak.Platform.Compat32=directory=lib/32bit",
        "--extension=org.winepak.Platform.Compat32=version=staging",
        "--env=PATH=/app/lib/32bit/bin:/app/bin:/usr/bin"
    ],
    "modules" : [
        {
            "name" : "setup",
            "buildsystem" : "simple",
            "build-commands" : [
                "mkdir -p /app/lib/32bit",
                "ln -s /app/lib/32bit/lib/ld-linux.so.2 /app/lib/ld-linux.so.2",
                "mkdir -p /app/etc",
                "install -Dm644 ld.so.conf /app/etc/ld.so.conf"
            ],
            "sources" : [
                {
                    "type" : "script",
                    "only-arches" : ["x86_64"],
                    "dest-filename" : "ld.so.conf",
                    "commands" : [
                        "# We just make any GL32 extension have higher priority",
                        "include /run/flatpak/ld.so.conf.d/app-*-org.freedesktop.Platform.GL32.*.conf",
                        "/app/lib/32bit/lib"
                    ]
                }
            ]
        },
        {
            "name" : "winepak-test",
            "buildsystem" : "simple",
            "build-commands" : [
                "install -d /app/bin",
                "install winepak-test /app/bin"
            ],
            "sources" : [
                {
                    "type" : "script",
                    "only-arches" : ["x86_64"],
                    "dest-filename" : "winepak-test",
                    "commands" : [
                        "echo \"Going to attempt to run a 64bit wine:\"",
                        "wine64 --version",
                        "echo \"Going to attempt to run a 32bit wine:\"",
                        "wine --version"
                    ]
                }
            ]
        }
    ]
}
