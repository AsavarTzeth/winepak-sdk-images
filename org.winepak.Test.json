{
    "app-id" : "org.winepak.Test",
    "branch" : "staging",
    "runtime" : "org.winepak.Platform",
    "runtime-version" : "staging",
    "sdk" : "org.winepak.Sdk",
    "command" : "winepak-test",
    "add-extensions": {
        "org.winepak.Platform.Compat32": {
            "directory": "lib/32bit",
            "add-ld-path": "lib",
            "no-autodownload": false
        }
    },
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--allow=multiarch",
        "--env=PATH=/app/bin:/usr/bin:/app/lib/32bit/bin"
    ],
    "modules" : [
        {
            "name" : "setup",
            "buildsystem" : "simple",
            "build-commands" : [
                "mkdir -p /app/lib/32bit",
                "ln -s /app/lib/32bit/lib/ld-linux.so.2 /app/lib/ld-linux.so.2"
            ]
        },
        {
            "name" : "winepak-test",
            "buildsystem" : "simple",
            "build-commands" : [
                "install -d /app/bin",
                "install winepak-test /app/bin"
            ],
            "sources" : [
                {
                    "type" : "script",
                    "only-arches" : ["x86_64"],
                    "dest-filename" : "winepak-test",
                    "commands" : [
                        "echo \"Going to attempt to run a 64bit wine:\"",
                        "wine64 --version",
                        "echo \"Going to attempt to run a 32bit wine:\"",
                        "wine --version"
                    ]
                }
            ]
        }
    ]
}
